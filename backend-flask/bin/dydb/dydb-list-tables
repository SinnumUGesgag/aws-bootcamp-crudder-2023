#!/usr/bin/bash

if [ "$1" = "prod" ]; then
    ENDPOINT_URL=""
else
    ENDPOINT_URL="--endpoint-url=http://localhost:8000"
fi

# Reference :   https://docs.aws.amazon.com/cli/latest/reference/dynamodb/list-tables.html

aws dynamodb list-tables $ENDPOINT_URL \
    --query TableNames \
    --output table
..
